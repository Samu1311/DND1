@page "/about-us"
@inject IHttpClientFactory HttpClientFactory
@inject NavigationManager NavigationManager

<div class="about-us-container">
    <h1 class="page-title">About HealthTrack+</h1>

    <!-- Product Introduction -->
    <section class="product-intro">
        <h2>Empowering Health Monitoring with Innovation</h2>
        <p>
            <strong>HealthTrack+</strong> is a cutting-edge solution designed to empower users in monitoring their health with precision and ease. 
            From tracking moles and analyzing medical images like X-rays to providing personalized alerts and health insights, the app combines 
            powerful technology with a user-friendly interface to make proactive health management accessible to everyone.
        </p>
        <p>
            Our features include:
            <ul>
                <li>Mole tracking with image uploads and analysis</li>
                <li>Medical image processing for X-rays and MRIs</li>
                <li>Dynamic health alerts and emergency contact functionality</li>
                <li>A secure profile management system</li>
                <li>Subscription-based access to premium features</li>
            </ul>
        </p>
    </section>

    <!-- Technologies Section -->
    <section class="technologies">
        <h2>The Technologies Behind HealthTrack+</h2>
        <p>
            HealthTrack+ leverages modern technologies to deliver a robust, secure, and efficient user experience:
        </p>
        <ul>
            <li><strong>Blazor Server:</strong> For building interactive and responsive UI components in a single-page application (SPA) architecture.</li>
            <li><strong>ASP.NET Core API:</strong> Ensuring seamless backend communication with RESTful endpoints.</li>
            <li><strong>Entity Framework Core:</strong> Simplifying database operations and ORM integration for SQLite.</li>
            <li><strong>SQLite:</strong> A lightweight database solution perfect for efficient and scalable data storage.</li>
            <li><strong>Azure Services:</strong> For image processing and potential scalability in cloud infrastructure.</li>
            <li><strong>Authentication and Authorization:</strong> Implemented using JWT for secure login and user role management.</li>
        </ul>
    </section>

    <!-- Founders Section -->
    <section class="founders-section">
        <h2>Meet Our Founders</h2>
        <div class="founders">
            <div class="founder-card">
                <img src="/images/samuele.png" alt="Samuele Biondi" class="founder-image" />
                <h3 class="founder-name">Samuele Biondi</h3>
                <p class="founder-title">Chief Technology Officer (CTO)</p>
                <p class="founder-description">
                    As the driving force behind the app's technical infrastructure, Samuele ensures the seamless integration of advanced 
                    technologies like Blazor Server, EF Core, and Azure services. His expertise in software architecture guarantees a secure and scalable product.
                </p>
            </div>
            <div class="founder-card">
                <img src="/images/ana.jpg" alt="Ana Vieira" class="founder-image" />
                <h3 class="founder-name">Ana Vieira</h3>
                <p class="founder-title">Medicine Expert</p>
                <p class="founder-description">
                    Ana's medical expertise shapes the health-related features of HealthTrack+, ensuring accuracy and relevance in every aspect 
                    of the application. She bridges the gap between medicine and technology.
                </p>
            </div>
            <div class="founder-card">
                <img src="/images/eliza.png" alt="Eliza Smela" class="founder-image" />
                <h3 class="founder-name">Eliza Smela</h3>
                <p class="founder-title">Chief Financial Officer (CFO)</p>
                <p class="founder-description">
                    Eliza manages the financial strategies of HealthTrack+, driving sustainable growth while maintaining affordability and accessibility for users worldwide.
                </p>
            </div>
            <div class="founder-card">
                <img src="/images/eric.png" alt="Eric Pinto" class="founder-image" />
                <h3 class="founder-name">Eric Pinto</h3>
                <p class="founder-title">Chief Marketing & Operations Officer (CMO & COO)</p>
                <p class="founder-description">
                    Eric leads marketing and operations with a focus on user engagement and satisfaction. His strategic insights have made 
                    HealthTrack+ a go-to solution for proactive health monitoring.
                </p>
            </div>
        </div>
    </section>

    <!-- Fun Facts Section -->
    <section class="fun-fact">
        <h2>Did You Know?</h2>
        <p>@currentFunFact</p>
    </section>
</div>

@code {
    private string currentFunFact = "The idea for HealthTrack+ came during a beach trip where the founders joked about Eric's mole count. What started as humor sparked the journey to create a life-changing application!";
    private readonly List<string> funFacts = new()
    {
        "The idea for HealthTrack+ came during a beach trip where the founders joked about Eric's mole count. What started as humor sparked the journey to create a life-changing application!",
        "HealthTrack+ has processed over 10,000 medical images within its first year of launch!",
        "The app's mole tracking feature was inspired by Samueleâ€™s interest in computer vision technologies.",
        "Eliza managed to secure initial funding within three months of starting the project, helping the team develop the app faster!",
        "Ana's medical experience ensures that the app's health-related recommendations are highly accurate and beneficial."
    };

    protected override void OnInitialized()
    {
        StartFunFactRotation();
    }

    private async void StartFunFactRotation()
    {
        while (true)
        {
            await Task.Delay(5000); // Change every 5 seconds
            var random = new Random();
            currentFunFact = funFacts[random.Next(funFacts.Count)];
            StateHasChanged();
        }
    }
}
