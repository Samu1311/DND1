@page "/upgrade-process"

<div class="upgrade-container">
    <div class="upgrade-card">
        <h1>Upgrade to Premium</h1>
        <p>Enjoy full access to all features, including Medical Image Analysis and more.</p>
        
        <div class="plan-options">
            <div class="plan">
                <h2>Monthly Plan</h2>
                <p><strong>$5</strong>/month</p>
                <button class="btn btn-secondary" @onclick='() => SelectPlan("Monthly")'>Choose Plan</button>
            </div>
            <div class="plan popular">
                <h2>Yearly Plan</h2>
                <p><strong>$50</strong>/year</p>
                <div class="ribbon">Best Value</div>
                <button class="btn btn-primary" @onclick='() => SelectPlan("Yearly")'>Choose Plan</button>
            </div>
        </div>

        <div class="payment-method">
            <h3>Payment Method</h3>
            <p>Choose your preferred payment method to proceed.</p>
            <div class="payment-icons">
                <img src="images/visa.png" alt="Visa">
                <img src="images/mastercard.png" alt="MasterCard">
                <img src="images/paypal.png" alt="PayPal">
            </div>
        </div>

        <button class="btn btn-success proceed-btn" @onclick="ProceedToPayment">Proceed to Payment</button>
    </div>
</div>

@code {
    private string selectedPlan = "";

    private void SelectPlan(string plan)
    {
        selectedPlan = plan;
        Console.WriteLine($"Selected plan: {plan}");
    }

    private void ProceedToPayment()
    {
        if (string.IsNullOrEmpty(selectedPlan))
        {
            Console.WriteLine("Please select a plan first.");
        }
        else
        {
            Console.WriteLine($"Proceeding to payment for {selectedPlan} plan.");
            // Navigate to payment gateway or handle logic
        }
    }
}
